<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_map"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    <TextView
        android:layout_marginLeft="6dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_below="@+id/tv_name"
        android:textSize="12dp"
        android:textColor="#B71C1C"
        android:id="@+id/tv_diachi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="6dp"
        android:layout_toEndOf="@+id/imageView"
        android:textSize="17dp"
        android:textColor="#B71C1C"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RatingBar
        android:id="@+id/rtb_map"
        style="?android:attr/ratingBarStyleIndicator"
        android:progressTint="#FFD600"
        android:layout_below="@id/tv_diachi"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/tv_diachi"
        android:layout_toRightOf="@+id/rtb_map"
        android:id="@+id/smoke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_diachi"
        android:layout_toEndOf="@+id/smoke"
        android:id="@+id/parking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/parking"
        android:layout_below="@+id/tv_diachi"
        android:id="@+id/food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
