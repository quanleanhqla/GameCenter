<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.quanla.quannet.fragments.DetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/quannet"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:id="@+id/iv_image"/>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_cmt"
            android:layout_below="@+id/ll6"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </android.support.v7.widget.RecyclerView>
        <Button
            android:background="@color/guillotine_background"
            android:id="@+id/bt_login"
            android:text="Đăng nhập để bình luận"
            android:layout_below="@+id/cv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:id="@+id/ll6"
            android:layout_below="@+id/cv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/im_profile"
                android:layout_width="42dp"
                android:layout_height="43dp" />
            <EditText
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/et_cmt"
                android:hint="Write comment here..."
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7" />

            <Button
                android:id="@+id/send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Send"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_marginTop="15dp"
            android:layout_below="@id/iv_image"
            android:id="@+id/cv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tv_title"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_below="@id/tv_title"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_address"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/rl1"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/ll1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/iv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_attach_money_white_24px" />

                        <TextView
                            android:layout_gravity="center"
                            android:textColor="#000000"
                            android:layout_marginLeft="5dp"
                            android:text="5000 - 7000/h"
                            android:id="@+id/tv_momey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/ll2"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center"
                                android:id="@+id/iv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_access_time_white_24px" />

                            <TextView
                                android:textColor="#000000"
                                android:layout_marginLeft="5dp"
                                android:layout_gravity="center"
                                android:text="06:30 - 23:00"
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_quadem"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cho qua đêm"/>


                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_thumb_up_white_24px" />

                        <TextView
                            android:textColor="#000000"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"
                            android:text="5.0"
                            android:id="@+id/tv_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/rl1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_marginEnd="5dp"
                        android:textColor="#ffffff"
                        android:background="@color/guillotine_background"
                        android:text="Đặt chỗ"
                        android:id="@+id/call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Button
                        android:elevation="0dp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/guillotine_background"
                        android:background="#00000000"
                        android:text="xem máy còn (6)"
                        android:id="@+id/computer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv2"
            android:layout_below="@id/cv1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_smoke"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_cigarette"/>
                        <TextView
                            android:id="@+id/tv_hutthuoc"
                            android:layout_marginTop="5dp"
                            android:textColor="#000000"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Được hút thuốc"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_park"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_parking_sign"/>
                        <TextView
                            android:id="@+id/tv_park"
                            android:layout_marginTop="5dp"
                            android:textColor="#000000"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Có chỗ để xe"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_food"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_food"/>
                        <TextView
                            android:id="@+id/tv_food"
                            android:layout_marginTop="5dp"
                            android:textColor="#000000"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phục vụ ăn uống"/>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:id="@+id/vv"
                    android:background="#9E9E9E"
                    android:layout_below="@id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>




            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_below="@id/cv2"
            android:id="@+id/cv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:srcCompat="@drawable/ic_label"
                    android:layout_marginStart="10dp"
                    android:id="@+id/iv_khuyenmai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_toEndOf="@id/iv_khuyenmai"
                    android:layout_marginStart="10dp"
                    android:id="@+id/tv_khuyenmai"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="15dp"
            android:layout_below="@id/cv4"
            android:id="@+id/cv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_anh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_anh"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_photo_black_24px"/>

                    <TextView
                        android:layout_gravity="center"
                        android:textColor="#000000"
                        android:text="4 ảnh"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_anh"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/ll_anh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>


            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>


</ScrollView>
