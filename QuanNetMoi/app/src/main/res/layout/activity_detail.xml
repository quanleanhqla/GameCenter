<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quanla.quannet.activities.DetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:contentInsetStart="0dp"
        style="@style/Toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/sv1"
        android:padding="6dp"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/quannet"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:scaleType="fitXY"
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </ImageView>

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_below="@id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Images"
                    android:textAlignment="center"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comments"
                    android:textAlignment="center"/>

            </LinearLayout>
            <View
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@id/ll1"
                />
            <View
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/ll1"/>
            <TextView
                android:layout_below="@id/ll1"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_title"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <LinearLayout
                android:layout_marginTop="6dp"
                android:id="@+id/ll3"
                android:layout_below="@id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_location_on_white_24px"/>
                <TextView
                    android:id="@+id/tv_address"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_below="@id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_attach_money_white_24px" />

                <TextView
                    android:text="5000-7000"
                    android:id="@+id/tv_momey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginBottom="6dp"
                android:layout_below="@id/ll4"
                android:id="@+id/ll5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="2dp"
                    android:id="@+id/iv_star"
                    app:srcCompat="@drawable/ic_star_rate_white_18px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_star"
                    android:text="4.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll2"
                android:layout_below="@id/ll5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Xem số máy còn và đặt máy :"
                    android:textAlignment="center"/>
                <Button
                    android:id="@+id/bt_call"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_call_white_24px"
                    />
            </LinearLayout>

            <View
                android:layout_above="@id/ll2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/ll2"
                android:background="#FFFFFF"/>
        </RelativeLayout>
    </ScrollView>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/sv1"
        android:id="@+id/tv_nhanxet"
        android:text="Danh gia"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RatingBar
        android:layout_below="@id/tv_nhanxet"
        android:layout_marginTop="10dp"
        android:id="@+id/rb_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_below="@id/rb_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:hint="Write comment here..."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:focusable="false"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Send"/>

    </LinearLayout>

</RelativeLayout>
